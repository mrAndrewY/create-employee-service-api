{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EmployeeCreateRequestDTO",
  "type": "object",
  "required": [
    "name",
    "lastname",
    "email",
    "telephone"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^[\\w-.]+@([\\w-]+.)+[\\w-]{2,4}$"
    },
    "phone": {
      "type": "string"
    }
  }
}
