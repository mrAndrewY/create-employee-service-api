{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EmployeeDto",
  "type": "object",
  "required": [
    "employee_id",
    "name",
    "lastname",
    "email",
    "telephone"
  ],
  "properties": {
    "employee_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,6}$"
    },
    "telephone": {
      "type": "string",
      "pattern": "^(\\+7|8)?(\\s?\\(?\\d{3}\\)?[\\s-]?)?\\d{3}[\\s-]?\\d{2}[\\s-]?\\d{2}$"
    }
  }
}
